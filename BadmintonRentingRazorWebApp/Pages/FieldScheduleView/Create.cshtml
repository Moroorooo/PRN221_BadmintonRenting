                <label asp-for="BookingBadmintonFieldSchedule.BookingId" class="control-label"></label>
                <select asp-for="BookingBadmintonFieldSchedule.BookingId" class ="form-control" asp-items="ViewBag.Booking"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookingBadmintonFieldSchedule.BadmintonField" class="control-label"></label>
                <select asp-for="BookingBadmintonFieldSchedule.BadmintonField" class ="form-control" asp-items="ViewBag.BadmintonField"></select>
            </div>
            <div class="form-group">
                <label asp-for="BookingBadmintonFieldSchedule.ScheduleId" class="control-label"></label>
                <select asp-for="BookingBadmintonFieldSchedule.ScheduleId" class ="form-control" asp-items="ViewBag.Schedule"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

