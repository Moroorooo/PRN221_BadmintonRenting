@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>BookingBadmintonFieldSchedule</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BookingBadmintonFieldSchedule.StartDate" class="control-label"></label>
                <input asp-for="BookingBadmintonFieldSchedule.StartDate" class="form-control" />
                <span asp-validation-for="BookingBadmintonFieldSchedule.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BookingBadmintonFieldSchedule.EndDate" class="control-label"></label>
                <input asp-for="BookingBadmintonFieldSchedule.EndDate" class="form-control" />
