@page
@model BadmintonRentingRazorWebApp.Pages.BadmintonFieldPage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>BadmintonField</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BadmintonField.BadmintonFieldId" />
            <div class="form-group">
                <label asp-for="BadmintonField.BadmintonFieldName" class="control-label"></label>
                <input asp-for="BadmintonField.BadmintonFieldName" class="form-control" />
                <span asp-validation-for="BadmintonField.BadmintonFieldName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadmintonField.Address" class="control-label"></label>
                <input asp-for="BadmintonField.Address" class="form-control" />
                <span asp-validation-for="BadmintonField.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadmintonField.Description" class="control-label"></label>
                <input asp-for="BadmintonField.Description" class="form-control" />
                <span asp-validation-for="BadmintonField.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadmintonField.StartTime" class="control-label"></label>
                <input asp-for="BadmintonField.StartTime" class="form-control" />
                <span asp-validation-for="BadmintonField.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BadmintonField.EndTime" class="control-label"></label>
                <input asp-for="BadmintonField.EndTime" class="form-control" />
                <span asp-validation-for="BadmintonField.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="BadmintonField.IsActive" /> @Html.DisplayNameFor(model => model.BadmintonField.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
