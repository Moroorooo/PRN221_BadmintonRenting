@page
@model BadmintonRentingRazorWebApp.Pages.BadmintonFieldPage.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BadmintonField</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Field Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BadmintonField.BadmintonFieldName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BadmintonField.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BadmintonField.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BadmintonField.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BadmintonField.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BadmintonField.StartTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BadmintonField.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BadmintonField.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BadmintonField.EndTime)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.BadmintonField.IsStatus)
            {
                <span>Đang hoạt động</span>
            }
            else
            {
                <span>Không hoạt động</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.BadmintonField?.BadmintonFieldId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
