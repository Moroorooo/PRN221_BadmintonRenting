@page
@model BadmintonRentingRazorWebApp.Pages.BadmintonFieldPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Field Name</th>
            <th>
                @Html.DisplayNameFor(model => model.BadmintonField[0].Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BadmintonField[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BadmintonField[0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BadmintonField[0].EndTime)
            </th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BadmintonField)
        {
            
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BadmintonFieldName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EndTime)
                    </td>
                    <td>
                        @if (item.IsStatus)
                        {
                            <span>Đang hoạt động</span>
                        }
                        else
                        {
                            <span>Không hoạt động</span>
                        }
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.BadmintonFieldId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.BadmintonFieldId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.BadmintonFieldId">Delete</a>
                    </td>
                </tr>
            
        }
    </tbody>
</table>
